[Unit]
Description=gunicorn daemon for SmartWaste
After=network.target

[Service]
User=root
Group=root

# Setzen Sie den absoluten Installationspfad
WorkingDirectory=/home/Felix/smartwaste
ExecStart=/home/Felix/smartwaste/env/bin/gunicorn --workers 3 --bind 192.168.1.31:8000 --access-logfile /home/Felix/smartwaste/log/gunicorn/access.log --error-logfile /home/Felix/smartwaste/log/gunicorn/error.log app:app

# Restart policies
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
